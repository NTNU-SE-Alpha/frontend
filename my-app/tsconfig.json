{
  "compilerOptions": {
    "target": "es6", // JavaScript 的版本
    "lib": ["dom", "dom.iterable", "esnext"], // 使用的標準庫
    "allowJs": true, // 是否允許 JavaScript 文件
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // 啟用 TypeScript 的嚴格模式
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // 不生成任何編譯結果
    "jsx": "react-jsx", // 使用 React JSX
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"] // 設定檔案的編譯範圍
}
